{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "pure-admin-thin",
  "version": "0.1.0",
  "identifier": "com.pureadmin.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8848",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Pure Admin Thin - 管理系统",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "maximized": false,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
